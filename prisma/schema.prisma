generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Type {
  factura
  recibo
}

model Product {
  id               String         @id @default(uuid())
  name             String         @unique
  slug             String
  shortDescription String
  fullDescription  String
  stock            Int
  availability     Boolean
  whatsappUrl      String
  images           ProductImage[]
  featured         Boolean        @default(false)
  category         Category       @relation(fields: [categoryId], references: [id])
  categoryId       String
}

model Service {
  id               String         @id @default(uuid())
  name             String         @unique
  slug             String
  shortDescription String
  fullDescription  String
  availability     Boolean
  whatsappUrl      String
  images           ServiceImage[]
  featured         Boolean        @default(false)
}

model ProductImage {
  id        Int     @id @default(autoincrement())
  url       String
  productId String
  product   Product @relation(fields: [productId], references: [id])
}

model ServiceImage {
  id        Int      @id @default(autoincrement())
  url       String
  serviceId String
  service   Service? @relation(fields: [serviceId], references: [id])
}

model Category {
  id       String    @id @default(uuid())
  name     String
  slug     String
  products Product[]
}

model Sales {
  id         String @id @default(uuid())
  order      Int    @default(autoincrement())
  clientRuc  String
  clientName String
  orderType  Type
  priceTotal Int
}

model Testimonial {
  id      String @id @default(uuid())
  name    String
  image   String
  comment String
}
